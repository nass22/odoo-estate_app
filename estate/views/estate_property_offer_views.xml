<?xml version="1.0"?>
<odoo>

    <!-- TREE VIEW -->
    <record id="estate_offer_view_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Offer">
                <field name="price"/>
                <field name="partner_id" />
                <field name="validity" />
                <field name="date_deadline" />
                <button name="accept_offer" type="object" icon="fa-check" />
                <button name="reject_offer" type="object" icon="fa-times" />
                <field name="status" />
            </tree>
        </field>
    </record>

    <!-- FORM -->
    <record id="estate_offer_view" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Offer">
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="partner_id" />
                        <field name="validity" />
                        <field name="date_deadline" />
                        <field name="status" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>