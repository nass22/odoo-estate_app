<?xml version="1.0"?>
<odoo>
<!-- MENU -->
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>

<!-- TREE VIEW -->
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Properties">
                <field name="name"/>
                <field name="postcode"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
            </tree>
        </field>
    </record>

<!-- FORM -->
    <record id="estate_property_edit_view" model="ir.ui.view">
        <field name="name">estate.property.edit</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Properties">
                <header>
                    <button name="sold_property" type="object" string="SOLD"/>
                    <button name="canceled_property" type="object" string="CANCEL"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted,sold"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name" placeholder="Name" />
                    </h1>
                    <field name="tag_ids" widget="many2many_tags" />
                   
                    <group>  
                        <group>
                            <field name="state" />
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_price" string="Best Offer" />
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description" />
                            </group>
                            <group>
                                <field name="bedrooms"/>
                            </group>
                            <group>
                                <field name="living_area"/>
                            </group>
                            <group>
                                <field name="facades"/>
                            </group>
                            <group>
                                <field name="garage"/>
                            </group>
                            <group>
                                <field name="garden"/>
                            </group>
                            <group>
                                <field name="garden_area"/>
                            </group>
                            <group>
                                <field name="garden_orientation"/>
                            </group>
                            <group>
                                <field name="property_type_id"/>
                            </group>
                            <group>
                                <field name="total_area"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids" />
                        </page>
                         <page string="Other info">
                            <group>
                                <field name="user_id" />
                                <field name="buyer_id" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- SEARCH -->
    <record id="estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Estate Property">
                <field name="name" string="Title" />
                <field name="postcode" />
                <field name="expected_price" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="facades" />
                <filter name="state" string="Available" domain="[('state', '=', 'new'), ('state', '=', 'offered_receveid')]" />
                <group expand="1" string="Group By">
                    <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}"/>
                    <filter string="Type" name="type" context="{'group_by':'property_type_id'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>
